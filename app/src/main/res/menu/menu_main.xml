<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lanzou.cloud.MainActivity">
    <item
        android:id="@+id/action_settings"
        android:icon="@drawable/baseline_settings_24"
        android:orderInCategory="100"
        android:title="@string/action_settings"
        android:visible="false"
        app:showAsAction="always" />

    <item
        android:id="@+id/create_folder"
        android:title="@string/mkdir" />

    <item
        android:id="@+id/detail"
        android:title="@string/detail" />

    <item
        android:id="@+id/download"
        android:icon="@drawable/baseline_download_for_offline_24"
        android:title="@string/download"
        android:visible="false"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/move"
        android:title="@string/move"
        android:visible="false" />

    <item
        android:id="@+id/delete"
        android:icon="@drawable/baseline_delete_outline_24"
        android:title="@string/delete"
        android:visible="false"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/sort"
        android:icon="@drawable/baseline_sort_24"
        android:title="@string/sort"
        android:visible="false"
        app:showAsAction="always">

        <menu>
            <item
                android:id="@+id/sort_by"
                android:title="排序">
                <menu>
                    <group android:checkableBehavior="single">
                        <item
                            android:id="@+id/sort_name"
                            android:checked="true"
                            android:title="名称" />
                        <item
                            android:id="@+id/sort_time"
                            android:title="时间" />
                        <item
                            android:id="@+id/sort_size"
                            android:title="大小" />
                    </group>
                </menu>
            </item>

            <item
                android:id="@+id/sort_rule"
                android:title="规则">
                <menu>
                    <group android:checkableBehavior="single">
                        <item
                            android:id="@+id/sort_asc"
                            android:checked="true"
                            android:title="正序" />
                        <item
                            android:id="@+id/sort_desc"
                            android:title="倒序" />
                    </group>
                </menu>
            </item>

            <item
                android:id="@+id/show_system_app"
                android:checkable="true"
                android:checked="false"
                android:title="显示系统App" />
        </menu>

    </item>

    <item
        android:id="@+id/scan"
        android:icon="@drawable/baseline_qr_code_scanner_24"
        android:title="@string/scan_code"
        android:visible="false"
        app:showAsAction="ifRoom" />
</menu>